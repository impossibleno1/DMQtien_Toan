@model IEnumerable<QTIENDEMO002.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sach san pham</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Tao san phan moi</a>
</p>
<table id="BangSanPham" class="table table-hover">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Giá gốc
            </th>
            <th>
                Giá góp
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Tên loại
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @item.MaSP
            </td>
            <td>
                @item.TenSP
            </td>
            <td>
                @item.GiaBan
            </td>
            <td>
                @item.GiaGoc
            </td>
            <td>
                @item.GiaGop
            </td>
            <td>
                @item.SoLuongTon
            </td>
            <td>
                @item.LoaiSanPham.TenLoai
            </td>
            <td>
                <a title="Sửa" href="@Url.Action("Edit", new { id = item.id})" class="btn btn-primary glyphicon glyphicon-pencil"></a>
                <a title="Thông tin" href="@Url.Action("Details", new { id = item.id})" class="btn btn-success glyphicon glyphicon-file"></a>
                <a title="Xóa" href="@Url.Action("Delete", new { id = item.id})" class="btn btn-danger glyphicon glyphicon-trash"></a>
            </td>
        </tr>
    </tbody>
}

</table>

@section scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#BangSanPham').DataTable();
        });
    </script>
} 


    
    
